<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.harinder.pf.MainActivity">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            android:src="@drawable/avatar"
            android:layout_gravity="center"
            />
        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="10"
            android:padding="2dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_gravity="left|top"
                android:text="Name : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/name"
                android:layout_gravity="left|center"
                android:layout_width="180dp"
                android:layout_column="1"
                android:text="Ishmeet Singha "
                android:layout_height="match_parent"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:layout_weight="0.51"
                android:textSize="18sp"
                android:textColor="#37474F"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top"
                android:layout_width="25dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="0"
            />
            <TextView
                android:layout_gravity="left|top"
                android:text="Email : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="200dp"
                android:layout_gravity="left|center"
                android:text="ishmet45@gmail.com"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="1"
                />
            <TextView
                android:layout_gravity="left|top"
                android:text="Store: "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/storename"
                android:layout_width="200dp"
                android:text="Singha Medicos "
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:hint="Store Name"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="2"
                />
            <TextView
                android:layout_gravity="left|top"
                android:text="License : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp"
                />

            <TextView
                android:id="@+id/license"
                android:layout_width="200dp"
                android:text="TKP438"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="3"
                />
            <TextView
                android:layout_gravity="left|top"
                android:text="Address : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/address"
                android:text="A-17,Rajouri Garden"
                android:layout_width="200dp"
                android:layout_gravity="left|center"
                android:layout_height="20dp"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="4"
                />
            <TextView
                android:layout_gravity="left|top"
                android:text="City : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/city"
                android:text="New Delhi"
                android:layout_width="200dp"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="5"

                />

            <TextView
                android:layout_gravity="left|top"
                android:text="State : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/edt_state"
                android:layout_width="200dp"
                android:text="Delhi"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="6"
                />

            <TextView
                android:layout_gravity="left|top"
                android:text="Pincode : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/edt_pincode"
                android:text="110018"
                android:layout_width="200dp"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="7"
                />

            <TextView
                android:layout_gravity="left|top"
                android:text="Ph No. : "
                android:gravity="center|right"
                android:layout_column="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_height="44dp" />

            <TextView
                android:id="@+id/edt_phone_number"
                android:layout_width="200dp"
                android:text="9856415236"
                android:layout_gravity="left|center"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF8F00"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="18sp"
                android:textColor="#37474F"
                />


            <ImageView
                android:layout_marginTop="10dp"
                android:layout_gravity="left|top|"
                android:layout_width="26dp"
                android:layout_column="2"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_height="23dp"
                android:layout_row="8"
                />

        </GridLayout>


        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/t_amp_c_apply"
            android:textColor="#1A237E" />

    </LinearLayout>


</ScrollView>
